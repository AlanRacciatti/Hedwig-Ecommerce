<!DOCTYPE html>

<html lang="es">

<head>

    <title>Panel de usuarios</title>

    <!-- Head -->
    <%- include("../partials/head") %>
    <!-- Fin del head -->

</head>

<body>

    <!-- Header -->

    <%- include('../partials/header') %>
    
    <!-- Fin del header -->

        <div class="container-panel">
        <h2 class="title-panel"> PANEL DE USUARIOS </h2>
       
        <ul class="list-group w-100">
            <% data.usuarios.forEach(usuario => { %>
                
                    <form method="POST" action="/users/panel/<%= usuario.id %>?_method=PUT ">
                    <ul class="d-flex">
                        <li class= 'list-group-item imagen-panel'> <img src = /img/users/<%= usuario.imagen %> width = "25px" > </img></li>
                        <li class="list-group-item"><%= usuario.nombre %></li>
                        <li class="list-group-item">
                             <% if (usuario.admin < 2) { %> 
                             <select name="admin" id="admin">
                                <% if (usuario.admin == 0) { %>
                                    <option value="0">Comprador</option>
                                    <option value="1">Administrador</option>
                                <% } else if (usuario.admin == 1) { %>
                                    <option value="0">Comprador</option>
                                    <option selected value="1">Administrador</option>
                                    <% } %> 
                            </select>
                         
                         <li class= "list-group-item1"><button class="btn btn-primary ">Guardar</button></li>
                            <% } else { %>
                                <p> Cuenta maestra </p>
                            <% } %>  
                       
                    </form>
                    </ul>
                </li>
            <% }) %>
        </ul>
        </div>



    <!-- Footer -->

	<%- include("../partials/footer") %>

	<!-- Fin del footer -->

</body>

</html>