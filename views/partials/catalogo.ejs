<section class="container">
    <div class="main-title-home">
        <h1><%= nombreVista%></h1>
    </div>
    <div class="main-title-home container fila-generos">
    <% for (let product of data.products) { %> 
    <% if (product.eliminado != 1) { %>
        
        <a href="/products/detalles/<%= product.id %> " class="card">
            <% 
                if (product.oferta != 0) { %>
                <div class="oferta-card">
                    <span>Oferta</span>
                    <i class="fas fa-tag card-icon-plus"></i>
                </div>
            <% } %>
            <% 
                if (product.created_at >=moment().subtract(1, 'days').toDate()) { %>
                <div class="novedad-card">
                    <span>Novedad</span>
                    <i class="fas fa-newspaper card-icon-plus"></i>
                </div>
            <% } %>
            <img src="<%= product.imagen %>" class="card-img-top" alt="portada-libro"> 
            <h5 class="card-title contenido-carta-articulo titulo-articulo-home"><%= product.titulo %> </h5>
            <div class= 'estrellitas'>
                
                <% let rating = product.valoracion
        
        for (let i = 0; i < 5; i++) { %>
            
            <% if (rating >= 1) { %>
                <i class="fas fa-star"></i>
                <% rating-- }
                
                else if (rating > 0) { %>
                    <i class="fas fa-star-half-alt"></i>
                    <% rating-- }
                    
                    else { %>
                        <i class="far fa-star"></i>
                        <% rating-- }
                        
                    } %>
                    
                    </div>
                    
                    <% let oferta = 100 - product.oferta; %>
                    <% for(let p of data.products) { %>
                        <% if (product.oferta) { %>
                            <div class = "precio-tarjeta">
                                <p class=" precio-original"><s>$<%= product.precio %> </s> </p> 
                                
                                <p class= "offer-percent"> <%= product.oferta %>%</p>
                                </div>
                                <h3 class="precio-producto-catalogo"><b>$ <%= (product.precio * oferta) / 100 %> </b></h3>
                                
                                <%  break }
                                
                                else { %>
                                    <h3 class="precio-producto-catalogo"><b> $<%= product.precio %> </b></h3>
                                    <% } break %>
                                    
                                    <% } %>
                                    
                                    <div class = "enviosGratis"> <i class="fas fa-truck"></i> Envio gratis </div>
                                    
                                    
                                    
                                    </a>
                                    <% } %>
                                    <% } %> 
                                </div>
                                    </section>